<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".externalStorage.ExternalStorageActivity">

<TextView
    android:id="@+id/textView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="32dp"
    android:text="File Name:"
    app:layout_constraintBottom_toBottomOf="@+id/fileNameEt"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/fileNameEt" />

<EditText
    android:id="@+id/fileNameEt"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="24dp"
    android:ems="10"
    android:hint="File Name"
    android:inputType="textPersonName"
    app:layout_constraintEnd_toStartOf="@+id/textView3"
    app:layout_constraintStart_toEndOf="@+id/textView"
    app:layout_constraintTop_toBottomOf="@+id/pathTvScroll" />

    <EditText
        android:id="@+id/dataEt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/fileNameEt" />

<GridLayout
    android:id="@+id/gridLayout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <Button
        android:id="@+id/readEPubFileButton"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:backgroundTint="@color/green"
        android:text="Read \nExternal public \nFile" />

    <Button
        android:id="@+id/writeEPubFileButton"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/green"
        android:padding="10dp"
        android:text="Create/Write \nExternal public \nFile" />


    <Button
        android:id="@+id/readEPriFileButton"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/red"
        android:padding="10dp"
        android:text="Read \nExternal private \nFile" />

    <Button
        android:id="@+id/writeEPriFileButton"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/red"
        android:padding="10dp"
        android:text="Create/Write \nExternal private \nFile" />


</GridLayout>

<ScrollView
    android:id="@+id/pathTvScroll"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:gravity="center"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" >
    <TextView
        android:id="@+id/pathTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />
</ScrollView>

<TextView
    android:id="@+id/textView3"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="24dp"
    android:text=".txt"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="@+id/fileNameEt"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/fileNameEt" />


</androidx.constraintlayout.widget.ConstraintLayout>